  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Package",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "cmd/psx-memcard.go",
      "cwd": "${workspaceFolder}",
      "internalConsoleOptions": "openOnFirstSessionStart"
    },
    {
      "name": "Debug Current Test",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${fileDirname}",
      "args": [
        "-test.v",
        "-test.run",
        "${selectedText}|${fileBasenameNoExtension}"
      ],
      "showLog": true,
      "env": {
        "TARGET_URL": "http://example.com"
      }
    }
  ]
}